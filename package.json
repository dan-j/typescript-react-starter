{
    "name": "typescript-react-starter",
    "version": "0.0.1",
    "description": "Starter-kit for React and TypeScript",
    "main": "index.js",
    "author": "dan-j <jonesd9@me.com>",
    "license": "MIT",
    "engines": {
        "node": "7.10.1",
        "npm": "4.2.0",
        "yarn": "0.27.5"
    },
    "scripts": {
        "test": "jest",
        "build": "webpack --config webpack.config.ts",
        "start": "webpack-dev-server --config webpack.config.ts"
    },
    "dependencies": {
        "@types/react": "^15.0.38",
        "@types/react-css-modules": "^4.2.1",
        "@types/react-dom": "^15.5.1",
        "@types/react-hot-loader": "^3.0.3",
        "@types/webpack-env": "^1.13.0",
        "react": "^15.6.1",
        "react-css-modules": "^4.5.2",
        "react-dom": "^15.6.1",
        "react-hot-loader": "next",
        "typescript": "^2.4.1"
    },
    "devDependencies": {
        "@types/chai": "^4.0.1",
        "@types/copy-webpack-plugin": "^4.0.0",
        "@types/enzyme": "^2.8.2",
        "@types/enzyme-to-json": "^1.5.0",
        "@types/jest": "^20.0.2",
        "@types/react-test-renderer": "^15.5.1",
        "@types/webpack": "^3.0.4",
        "awesome-typescript-loader": "^3.2.1",
        "babel-cli": "^6.24.1",
        "babel-core": "^6.25.0",
        "babel-loader": "^7.1.1",
        "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "chai": "^4.1.0",
        "copy-webpack-plugin": "^4.0.1",
        "css-loader": "^0.28.4",
        "enzyme": "^2.9.1",
        "enzyme-to-json": "^1.5.1",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^20.0.4",
        "merge-source-map": "^1.0.4",
        "node-sass": "^4.5.3",
        "react-test-renderer": "^15.6.1",
        "sass-loader": "^6.0.6",
        "style-loader": "^0.18.2",
        "ts-node": "^3.2.0",
        "tslint": "^5.5.0",
        "tslint-config-airbnb": "^5.2.1",
        "tslint-react": "^3.0.0",
        "webpack": "^3.2.0",
        "webpack-dev-server": "^2.5.1"
    },
    "jest": {
        "moduleNameMapper": {
            "\\.(s?css)$": "identity-obj-proxy"
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "rootDir": "src",
        "transform": {
            "^.+\\.[jt]sx?$": "<rootDir>/../jest-preprocessor.js"
        },
        "testMatch": [
            "**/__tests__/**/*.test.(ts|tsx|js)"
        ],
        "mapCoverage": true,
        "collectCoverageFrom": ["src/**/*.{js,jsx,ts,tsx}"]
    }
}
