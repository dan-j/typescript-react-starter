{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "jsx": "preserve",
        "sourceMap": true,
        "inlineSources": true,
        "outDir": "ts-build",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "baseUrl": "src",
        "allowJs": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules"
    ]
}
